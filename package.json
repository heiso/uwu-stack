{
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=20.6.0"
  },
  "scripts": {
    "check-dependencies": "npx npm-check-updates --peer --format group -i",
    "prisma-map": "npx prisma-case-format --file ./prisma/schema.prisma --map-table-case=snake,plural --map-field-case=snake -p",
    "up": "docker-compose up -d && pm2 start ecosystem.config.cjs",
    "down": "pm2 delete ecosystem.config.cjs && docker-compose down",
    "log": "pm2 log",
    "restart": "pm2 delete ecosystem.config.cjs && pm2 start ecosystem.config.cjs",
    "create-migration": "npx prisma migrate dev --create-only",
    "reset-database": "prisma migrate reset -f --skip-generate",
    "build": "npx tsc -p tsconfig.build.json && remix vite:build",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "test": "jest"
  },
  "dependencies": {
    "@conform-to/react": "^1.0.2",
    "@conform-to/zod": "^1.0.2",
    "@prisma/client": "^5.10.2",
    "@remix-run/node": "^2.8.0",
    "@remix-run/react": "^2.8.0",
    "@remix-run/serve": "^2.8.0",
    "date-fns": "^2.30.0",
    "isbot": "^3.7.0",
    "koa": "^2.15.0",
    "koa-connect": "^2.1.0",
    "koa-static": "^5.0.0",
    "koa-trust-proxy": "^0.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-select": "^5.8.0",
    "redis": "^4.6.13",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@remix-run/dev": "^2.8.0",
    "@remix-run/eslint-config": "^2.8.0",
    "@swc/core": "^1.4.2",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.15.0",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "pm2": "^5.3.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.10.2",
    "prisma-case-format": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  }
}
